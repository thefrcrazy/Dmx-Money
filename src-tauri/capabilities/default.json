{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions with restricted fs scopes",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "core:window:allow-set-position",
    "core:window:allow-set-size",
    "core:window:allow-minimize",
    "core:window:allow-maximize",
    "core:window:allow-close",
    "updater:default",
    "dialog:default",
    "os:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$DOCUMENT/dmxmoney2025_db.json" },
        { "path": "$DOCUMENT/*.ofx" },
        { "path": "$DOCUMENT/*.qif" },
        { "path": "$DOCUMENT/*.csv" },
        { "path": "$DOWNLOAD/*.ofx" },
        { "path": "$DOWNLOAD/*.qif" },
        { "path": "$DOWNLOAD/*.csv" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$DOCUMENT/dmxmoney2025_db.json" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$DOCUMENT/dmxmoney2025_db.json" }
      ]
    }
  ]
}
